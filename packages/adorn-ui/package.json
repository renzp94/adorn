{
	"name": "adorn-ui",
	"version": "0.0.5",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package:dev": "svelte-package -w -i src",
		"package": "svelte-kit sync && svelte-package -i src && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"type": "module",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"author": "renzp94",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/renzp94/adorn.git"
	},
	"bugs": {
		"url": "https://github.com/renzp94/adorn/issues"
	},
	"homepage": "https://github.com/renzp94/adorn#readme",
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"keywords": [
		"ui",
		"svelte-components",
		"svelte",
		"sveltejs",
		"svelte-ui",
		"svelte-ui-components",
		"svelte4",
		"adorn",
		"adorn-ui"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.23.0",
		"@sveltejs/package": "^2.2.2",
		"@types/lodash-es": "^4.17.9",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.48.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.33.0",
		"less": "^4.2.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.16",
		"stylelint": "^15.10.3",
		"stylelint-config-property-sort-order-smacss": "^9.1.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-order": "^6.0.3",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tslib": "^2.6.2",
		"typescript": "^5.2.2",
		"vite": "^4.4.9"
	},
	"dependencies": {
		"@renzp/classes": "^0.0.3",
		"lodash-es": "^4.17.21"
	}
}
